
@model List<Sahibinden.Data.Models.Category>
  
<div class="container">
    <br />
    <h2>Category List</h2>
    <br />
    @using (Html.BeginForm())
    {
        <p>
            Food Name :@Html.TextBox("p")
            <input type="submit" value="find" />
        </p>

    }

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Status</th>
            <th>Category Description</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId </td>
                <td>@item.CategoryName</td>
                <td>@item.Status</td>
                <td>@item.CategoryDescription</td>
                <td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Delete</a>
                <td><a href="/Category/CategoryGet/@item.CategoryId" class="btn btn-success">Update</a>
            </tr>
        }
    </table>
    <a href="/Category/CategoryAdd" class="btn btn-success">New Category Add</a>

</div>