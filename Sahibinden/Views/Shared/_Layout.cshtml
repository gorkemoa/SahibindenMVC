<!DOCTYPE html>
<html>
<title>admin panel</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Close &times;
        </button>
        <a asp-action="Index" asp-controller="Category" class="w3-bar-item w3-button">Category</a>
        <a asp-action="CarIndex" asp-controller="Car" class="w3-bar-item w3-button">Cars</a>
        <a asp-action="Index" asp-controller="Chart" class="w3-bar-item w3-button">Google Charts</a>
        <a asp-action="" asp-controller="" class="w3-bar-item w3-button">Popup</a>
        <a asp-action="Statistics" asp-controller="Chart" class="w3-bar-item w3-button">Statistics</a>
        <a asp-action="" asp-controller="" class="w3-bar-item w3-button">Settings</a>
        <a asp-action="LogOut" asp-controller="Login" class="w3-bar-item w3-button">Log Out</a>








    </div>

    <div id="main">

        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div <h1>Admin</h1>
                <style>
                    .center {
                        width: 150px;
                        height: 1520px;
                        margin: 50px;
                        
                    }

                    #first {
                        background: red;
                    }

                    #second {
                        background: blue;
                        position: relative;
                        top: 50px;
                    }

                    #third {
                        background: green;
                    }

                    
                </style>
                
            </div>
        </div>
       
    </div>


    <script>function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }</script>
    @RenderBody()
</body>
</html>
