@{
}

@model Sahibinden.Data.Models.Car

<div class="container">
    <h2>Car Add Page</h2>

    <br />

    @using (Html.BeginForm("CarUpdate", "Car", FormMethod.Post))
    {
        @Html.Label("Car ID")
        @Html.TextBoxFor(x => x.CarId, new { @class = "form-control" })
        <br />
        @Html.Label("Car Name")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        @Html.Label("Stock")
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        <br />
        @Html.Label("Price")
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        <br />
        @Html.Label("Image URL")
        @Html.TextBoxFor(x => x.ImgUrl, new { @class = "form-control" })
        <br />
        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
        <br />
        @Html.Label("Description")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        <br />
        <button class="btn btn-primary">Save</button>

    }

</div>