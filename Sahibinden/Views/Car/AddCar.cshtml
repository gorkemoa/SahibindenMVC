@model Sahibinden.Data.Models.urunekle 

<div class="container">
    <h2>Food Add Page</h2>
    <br />
    <form class="form-group" action="AddCar" asp-controller="Car" method="post" enctype="multipart/form-data">
        @Html.Label("Food Name")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        @Html.Label("Stock")
        @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        <br />
        @Html.Label("Price")
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        <br />
        @Html. Label("Choose Image")
        <input type="file" name="ImageURL" />
        <br />
        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryId, (List <SelectListItem>)ViewBag.v1, new { @class = "form-control" })
        <br />
        <br />
            <button class="btn btn-primary">Save</button>
    </form>

    }
</div>
